{
  "extends": "airbnb",
  "rules": {
    "linebreak-style": ["error", "windows"],
    "no-console": 0,
    "new-cap": 0,
    "max-len": 0,
    "react/prefer-es6-class": 0,
    "react/prefer-stateless-function": 0,
    "react/no-unescaped-entities": 0
  },
  "plugins": ["react"],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "globals": {
    "expect": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
